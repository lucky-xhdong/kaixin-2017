4.添加弹出框
<!-- pop start -->
<div class="pop-christmas">
    <a href="javascript:;" class="btn-pop-close">&times;</a>
    <!-- happy new year start -->
    <div class="happy-new-year">
        <h2>Happy New Year 2017！</h2>
    </div>
    <!-- happy new year end -->
    <!-- gift-lists start -->
    <div class="gift-lists">
        <ul>
            <li><span data-before="Your code：">12345678</span></li>
            <li><span data-before="Your code：">12345678</span></li>
            <li><span data-before="Your code：">12345678</span></li>
        </ul>
    </div>
    <!-- gift-lists end -->
    <!-- congratulations start -->
    <div class="congratulations">
        <h2 data-after="Thank you for your support to COTK.">Congratulations！</h2>

        <div class="gift-code" data-before="Here is your gift code:">
            <span data-before="Your code：">12345678</span>
        </div>
    </div>
    <!-- congratulations end -->
</div>
<div class="christmas-mask"></div>
<!-- pop end -->
